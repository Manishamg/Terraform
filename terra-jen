pipeline {
	agent any
	stages{
		environment {
        		variable_check = "${params.variable_check}"
   	 	}
		stage ("terra-version")
		{
			steps{
				sh "terraform --version"
			}
		}
		stage ("terra-initialization")
		{
			steps{
				sh "terraform init"
			}
		}
		stage ("terra-validation")
		{
			steps{
				sh "terraform validate"
			}
		}
		stage ("terra-plan")
		{
			steps{
				sh "terraform plan"
			}
		}
		stage ("terra-apply")
		{
			steps{
				//sh "terraform apply"
				sh "terraform apply -auto-approve -var 'variable_check=${env.variable_check}'"
			}
		}
	}

}
